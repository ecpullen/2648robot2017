    public void start(double speed, double kF){
    	shooter.setPID(shooter.getP(), shooter.getI(), shooter.getD(), kF);
    	shooter.setSetpoint(speed);
    	shooter.enable();
    }
    public void spin(double speed){
    	lShooter.set(speed);
    	rShooter.set(-speed);
    }
    
    public void stop(){
